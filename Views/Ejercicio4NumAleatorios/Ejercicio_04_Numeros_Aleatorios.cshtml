@model IEnumerable<TrabajoFinal_Unidad1_Web2_Estrella_Robles_Sosa.Models.ClsNumero>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <title>Ejercicio 4</title>
    <link type="text/css" href="~/Recursos/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Recursos/Scripts/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/Recursos/Scripts/bootstrap.min.js"></script>
    <style>
        .opacity {
            background-color: rgb(60,81,135);
            opacity: 0.8; /* Opacidad 60% */
        }

        .letra {
            font-family: 'Segoe UI';
            font-weight: bold;
        }

        .letra2 {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-weight: bold;
        }
    </style>

   
</head>

<body style="background-image:url('../../Recursos/fondo1.png')">
    <nav class="navbar navbar-expand-lg navbar-dark opacity fixed-top">

        <a class="navbar-brand">
            <img src="~/Recursos/TRABAJO FINAL.png" width="245" alt="TrabajoFinalUnidad1">
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
                aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse " id="basicExampleNav">

            <ul class="navbar-nav mr-auto" style="margin-left:auto; margin-right:auto">
                <li class="nav-item ">
                    @Html.ActionLink("INICIO", "Index", "Inicio", null, new { @class = "nav-link letra" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("EJERCICIO 1", "Ejercicio1_Cronometro", "Ejercicio1Cronometro", null, new { @class = "nav-link letra" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("EJERCICIO 2", "Ejercicio_02_Lista_Producto", "Ejercicio2ListaProductos", null, new { @class = "nav-link letra" })
                </li>
                <li class="nav-item ">
                    @Html.ActionLink("EJERCICIO 3", "Index", "Ejercicio3Ocurrencias", null, new { @class = "nav-link letra" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("EJERCICIO 4", "Ejercicio_04_Numeros_Aleatorios", "Ejercicio4NumAleatorios", null, new { @class = "nav-link letra" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("EJERCICIO 5", "Ejercicio_05_prestamo", "Ejercicio5Prestamo", null, new { @class = "nav-link letra" })
                </li>
            </ul>

        </div>

    </nav>
    <section class="container" style="margin-top: 100px;">
        <div class="bg-white box-shadow py-5 px-4 px-sm-5">
            <div class="row">
                <div class="col-lg-12 pb-4 mb-3">
                    <h5>
                        <span class="d-inline-block bg-info text-white px-2 py-1">
                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">4</font></font>
                        </span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Promedio de números aleatorios </font></font>
                    </h5>
                    <hr>

                    <form name="frmSuma" action="Ejercicio_04_Numeros_Aleatorios" method="post">
                        <div class="form-group ">
                            <label>Ingrese Cantidad de Números: </label>
                            <input class="form-control validanumericos" type="text" pattern="^[0-9]+" maxlength="5" name="valor1" required/><br />
                            <input class="btn btn-primary" type="submit" value="Generar" />
                        </div>
                    </form>
                    </div>
                <div class="col-lg-6 pb-4 mb-3">
                    <h5>
                        <span class="d-inline-block bg-warning text-white px-2 py-1">
                            <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">+</font></font>
                        </span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Tabla </font></font>
                    </h5>
                    <hr>
                    <table class="table table-hover table-bordered " align="center">
                        <thead class="thead-dark">
                            <tr>
                                <th>Números Aleatorios </th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.numero)</td>
                            </tr>
                        }
                    </table>
                </div>
                    <div class="col-lg-6 pb-4 mb-3">
                        <h5>
                            <span class="d-inline-block bg-warning text-white px-2 py-1">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">+</font></font>
                            </span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"> Resultados </font></font>
                        </h5>
                        <hr>

                        <div>
                            <label>Numero Mayor:</label> @ViewBag.mayor <br />
                            <label>Numero Menor:</label> @ViewBag.menor <br />
                            <label>Suma total:</label> @ViewBag.suma <br />
                            <label>Promedio total:</label> @ViewBag.promedio <br />

                        </div>
                    </div>
            </div>
        </div>
    </section>
</body>
</html>
